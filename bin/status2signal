#    along with this program.  If not, see <https://www.gnu.org/licenses/>.


# Values
for status in "$@"; do
	case "$status" in
		'0')                      ;;
		'2')   signal='USAGE'     ;;
		'126') signal='NOPERM'    ;;
		'127') signal='NOTFOUND'  ;;
		'129') signal='SIGHUP'    ;;
		'130') signal='SIGINT'    ;;
		'131') signal='SIGQUIT'   ;;
		'132') signal='SIGILL'    ;;
		'133') signal='SIGTRAP'   ;;
		'134') signal='SIGABRT'   ;;
		'135') signal='SIGBUS'    ;;
		'136') signal='SIGFPE'    ;;
		'137') signal='SIGKILL'   ;;
		'138') signal='SIGUSR1'   ;;
		'139') signal='SIGSEGV'   ;;
		'140') signal='SIGUSR2'   ;;
		'141') signal='SIGPIPE'   ;;
		'142') signal='SIGALRM'   ;;
		'143') signal='SIGTERM'   ;;
		'144') signal='SIGSTKFLT' ;;
		'145') signal='SIGCHLD'   ;;
		'146') signal='SIGCONT'   ;;
		'147') signal='SIGSTOP'   ;;
		'148') signal='SIGTSTP'   ;;
		'149') signal='SIGTTIN'   ;;
		'150') signal='SIGTTOU'   ;;
		'151') signal='SIGURG'    ;;
		'152') signal='SIGXCPU'   ;;
		'153') signal='SIGXFSZ'   ;;
		'154') signal='SIGVTALRM' ;;
		'155') signal='SIGPROF'   ;;
		'156') signal='SIGWINCH'  ;;
		'157') signal='SIGIO'     ;;
		'158') signal='SIGPWR'    ;;
		'159') signal='SIGSYS'    ;;
		*)
			if printf '%d' "$status" >/dev/null; then
				signal="ERROR"
			else
				exit 1
			fi
		;;
	esac

	SIGNALS="${SIGNALS:+$SIGNALS\n}$signal"
done


# Start
printf '%s' "$SIGNALS"


exit 0
